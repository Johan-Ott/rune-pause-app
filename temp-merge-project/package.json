    "svelte-check": "^3.8.6",
    "svelte-preprocess": "^6.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.14.0",
    "vite": "^5.4.19",
    "vitest": "^2.1.4"
