{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rune Pause",
  "version": "0.5.0",
  "identifier": "com.captainotto.rune-pause",
  "build": {
    "beforeDevCommand": "vite dev",
    "beforeBuildCommand": "vite build",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [],
    "macOSPrivateApi": true
  },
  "bundle": { 
    "active": true, 
    "targets": ["app","dmg","msi"], 
    "icon": ["src/assets/icon.png"],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "providerShortName": null
    }
  },
  "plugins": {
    "globalShortcut": {
      "all": true
    },
    "systemTray": {
      "all": true
    }
  }
}
